<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manu.android_base">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".samples.ImageSampleActivity" />
        <activity android:name=".samples.http.OkHttpSampleActivity" />
        <activity android:name=".samples.PopupWindowSampleActivity" />
        <activity android:name=".samples.core.RetrofitSampleActivity" />
        <activity android:name=".base.view.MvpActivity" />
        <activity android:name="com.manu.core.base.BaseActivity" />
        <activity android:name=".widget.LetterActivity" />
        <activity android:name=".widget.WheelActivity"></activity>
    </application>

</manifest>